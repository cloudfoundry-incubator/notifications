#! /usr/bin/env bash
set -e

DIR=$(dirname $0)

if [[ -z "$ENVIRONMENT" ]]; then
    ENVIRONMENT=test
fi

GREEN="\033[0;32m"
RED="\033[0;31m"
NONE="\033[0m"

source $DIR/env/$ENVIRONMENT

function run() {
  set +e
  ginkgo -randomizeAllSpecs=true -randomizeSuites=true -succinct=true $@
  EXIT_CODE=$?
  if [[ $EXIT_CODE != 0 ]]; then
    fail
  fi
  set -e
}

function fail() {
  echo
  echo -e "${RED}UNIT SUITE FAIL${NONE}"
  exit $EXIT_CODE
}

if [[ -z "$1" ]]; then
    run ./v1/models ./gobble ./db
else
    run $@
fi

echo -e "${GREEN}UNIT SUITE PASS${NONE}"
exit $EXIT_CODE
